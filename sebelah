    <script>
        // 商品数据
        const menuItems = [
            { id: 1, name: "CHICKEN CHOP WITH PASTA", price: 15.90, category: "western" },
            { id: 2, name: "CHICKEN CHOP WITH FRIES", price: 15.90, category: "western" },
            { id: 3, name: "FISH BROOTH NOODLE", price: 7.90, category: "noodles" },
            { id: 4, name: "SPAGHETTI CHICKEN BOLOGNESE", price: 7.90, category: "noodles" },
            { id: 5, name: "CURRY CHICKEN RICE", price: 9.90, category: "rice" },
            { id: 6, name: "TAKEAWAY BOX", price: 0.50, category: "extras" },
            { id: 7, name: "FRENCH FRIES", price: 5.90, category: "snacks" },
            { id: 8, name: "ONION RINGS", price: 6.90, category: "snacks" }
        ];

        // 初始化商品数量
        let quantities = {};
        menuItems.forEach(item => {
            quantities[item.id] = 0;
        });

        // 更新数量显示
        function updateQuantityDisplay(id) {
            const quantityDisplay = document.getElementById(quantity-${id});
            quantityDisplay.textContent = quantities[id];
        }

        // 四舍五入函数 - 四舍五入到最接近的0.05
        function roundToNearestFiveCents(amount) {
            return Math.round(amount * 20) / 20;
        }

        // 清除所有选择
        function clearAllSelections() {
            // 重置所有商品数量为0
            menuItems.forEach(item => {
                quantities[item.id] = 0;
                updateQuantityDisplay(item.id);
            });
            
            // 取消折扣选项
            document.getElementById('discount').checked = false;
            
            // 更新总价
            updateTotal();
            
            // 显示成功消息
            alert('所有选择已清除！');
        }

        // 更新总价
        function updateTotal() {
            let subtotal = 0;
            
            menuItems.forEach(item => {
                subtotal += item.price * quantities[item.id];
            });
            
            const discountCheckbox = document.getElementById('discount');
            const discountApplied = discountCheckbox.checked;
            const discountAmount = discountApplied ? subtotal * 0.1 : 0;
            let total = subtotal - discountAmount;
            
            // 强制性四舍五入机制
            const roundedTotal = roundToNearestFiveCents(total);
            const roundingAmount = roundedTotal - total;
            total = roundedTotal;
            
            document.getElementById('subtotal').textContent = RM ${subtotal.toFixed(2)};
            document.getElementById('discount-amount').textContent = RM ${discountAmount.toFixed(2)};
            document.getElementById('rounding-amount').textContent = RM ${roundingAmount.toFixed(2)};
            document.getElementById('total').textContent = RM ${total.toFixed(2)};
        }

        // 添加事件监听器到所有加减按钮
        document.querySelectorAll('.quantity-btn.plus').forEach(btn => {
            btn.addEventListener('click', () => {
                const id = parseInt(btn.getAttribute('data-id'));
                quantities[id]++;
                updateQuantityDisplay(id);
                updateTotal();
            });
        });